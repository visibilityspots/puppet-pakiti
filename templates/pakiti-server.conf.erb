# Configuration file for the Pakti web interface.
#
# This file is managed by PUPPET

# Set the parameters for connecting to
# the Pakiti database.

[mysql]
hostname = <%= scope.lookupvar('pakiti::server_hostname') %>
dbname   = <%= scope.lookupvar('pakiti::server_dbname') %>
username = <%= scope.lookupvar('pakiti::server_username') %>
password = <%= scope.lookupvar('pakiti::server_password') %>

[webinterface]
# URL of your local Pakiti server
url = <%= scope.lookupvar('pakiti::server_web_url') %>
title = <%= scope.lookupvar('pakiti::server_web_title') %>
